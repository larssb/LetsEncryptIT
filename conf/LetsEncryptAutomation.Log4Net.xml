<log4net>
    <appender name="LetsEncryptAutomation_log4NetRollingFileAppender" type="log4net.Appender.RollingFileAppender">
        <file type="log4net.Util.PatternString" value="%property{LogFileName}"/>
        <appendToFile value="true"/>
        <rollingStyle value="Date"/>
        <datePattern value="yyyyMMdd"/>
        <maxSizeRollBackups value="15"/>

        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="[%date{yy-MM-dd HH:mm:ss}] [Time since execution start (in ms): %timestamp] [%level] - %message%newline"/>
        </layout>
    </appender>

    <root>
        <level value="DEBUG"/>
    </root>

    <logger name="LetsEncryptAutomation_Error" additivity="false">
    <level value="ERROR"/>
        <appender-ref ref="LetsEncryptAutomation_log4NetRollingFileAppender"/>
    </logger>

    <logger name="LetsEncryptAutomation_Debug" additivity="false">
    <level value="DEBUG"/>
        <appender-ref ref="LetsEncryptAutomation_log4NetRollingFileAppender"/>
    </logger>
</log4net>